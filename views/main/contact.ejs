    <script>
        function valid(email) {
            const pattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return pattern.test(email);
        }

        function show() {

            //alert(document.getElementById('hdnval').value);
            if (!document.getElementById('hdnval').value.includes(document.getElementById("phone2").value))
                document.getElementById('hdnval').value = document.getElementById('hdnval').value + ' ' + document.getElementById("phone2").value;
            //alert(document.getElementById("hdnval").value + ' final value');
        }
        function showTooltip() {

            const fname = document.getElementById('fname');
            const email = document.getElementById('email');
            const phone = document.getElementById('phone2');
            const msg = document.getElementById('message');



            if (fname.value === "") {
                const fntooltip = new bootstrap.Tooltip(fname);
                fntooltip.show();
                return false;
            }
            if (email.value === "") {
                const emtooltip = new bootstrap.Tooltip(email);
                emtooltip.show();
                return false;
            }
            if (!valid(email.value)) {
                const emtooltip = new bootstrap.Tooltip(email);
                emtooltip.show();
                return false;
            }

            if (phone.value === "") {
                const phtooltip = new bootstrap.Tooltip(phone);
                phtooltip.show();
                return false;
            }
            if (msg.value === "") {
                const msgtooltip = new bootstrap.Tooltip(message);
                msgtooltip.show();
                return false;
            }

            return true;
        }

        document.querySelector("input").addEventListener("input", function () {
            $(this).tooltip('hide');
            $(this).tooltip('disable');

        });
        document.querySelector("textarea").addEventListener("input", function () {
            $(this).tooltip('hide');
            $(this).tooltip('disable');

        });
        document.querySelectorAll("input").forEach(input => {
            input.addEventListener("mouseenter", function () {
                if ($(this).val().trim() !== '') {

                    $(this).tooltip('hide');
                    $(this).tooltip('disable');
                }
            });
        });
        $("textarea").on("mouseenter", function () {
            if ($(this).val().trim() !== "") {
                $(this).tooltip('hide');
                $(this).tooltip('disable');
            }
        });


    </script>
