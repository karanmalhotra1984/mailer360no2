    <script>

        const phoneInputField = document.querySelector("#phone");
        let iti; // Declare globally

        function initializePhoneInput() {
            const phoneInput = document.querySelector("#phone");
            //if (iti) iti.destroy(); // Destroy previous instance if exists
            iti = window.intlTelInput(phoneInput, {
                initialCountry: "IN",
                separateDialCode: true,
                geoIpLookup: callback => {
                    callback((navigator.language || "US").split("-").pop().toUpperCase());
                },
                utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js"
            });
            const countryData = iti.getSelectedCountryData();
            document.getElementById('hdnval').value = countryData.name + '+' + countryData.dialCode;
        }


        phoneInputField.addEventListener("countrychange", function () {
            phoneInputField.enabled = true;
            const countryData = iti.getSelectedCountryData();

            phoneInputField.value = ' + ' + countryData.dialCode;
            phoneInputField.enabled = false;

            document.getElementById('hdnval').value = countryData.name + '  +  ' + countryData.dialCode;
            //alert(document.getElementById('hdnval').value);

